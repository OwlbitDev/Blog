---
let { title, publishDate,category } = Astro.props;
let content=''
if(publishDate){
const isoDate = new Date(publishDate).toISOString();
  content=`
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": ${JSON.stringify(title)},
    "datePublished": "${isoDate}",
    "author": {
      "@type": "Person",
      "name": "Litlab",
      "url": "https://litlab.dev/about"
    }
  }
`
}else if(category==='about'){
  content=`{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Litlab",
  "jobTitle": "Android工程师",
  "url": "https://litlab.dev/about",
  "sameAs": ["https://github.com/LitlabDev"]
}`
}else if(category==='home'){
  content=`{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Litlab",
  "url": "https://litlab.dev/"
}`
}
---

<script is:inline type="application/ld+json" set:html={content}></script>
