---
import BaseHead from './BaseHead.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Firebase from './Firebase.astro';
import StructData from './StructData.astro';

const {title,description,date,category}=Astro.props
---
<!doctype html>
<html lang={'en'}>
	<head>
		<link rel="sitemap"  href="/sitemap-index.xml">
		<BaseHead title={title} description={description} />
		{<StructData {title} publishDate={date} {category}/>}
	</head>
	<body class="bg-[var(--md-sys-color-background)] text-[var(--md-sys-color-on-surface)]">
		<Header/>
		<main class="mx-4 mt-20">
			<slot />
		</main>
		<Footer />
		<Firebase {title}/>
	</body>
</html>
